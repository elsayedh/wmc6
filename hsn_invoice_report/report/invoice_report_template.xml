<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <template id="report_customer_invoice">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="print_with_payments" t-value="True"/>
                <t t-call="hsn_invoice_report.report_customer_invoice_document"/>
            </t>
        </t>
    </template>


     <template id="report_customer_invoice_document">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
        <t t-set="lang" t-value="o.invoice_user_id.sudo().lang if o.move_type in ('in_invoice', 'in_refund') else o.partner_id.lang"/>

                   <t t-call="web.basic_layout">
            <t t-call="hsn_invoice_report.layout_without_header_footer">



                <t t-set="o" t-value="o.with_context(lang=lang)" />

                <div class="page">

<div>   <img class="img-fluid"  style="display: block;
  margin-left: auto;
  margin-right: auto;
  width: 40%;"
                   t-att-src="'hsn_invoice_report/static/description/images/taste1.jpg'"/></div>


                    <h8>
                        <bdi>  Tax ID / الرقم الضريبى </bdi> <span >   <t t-esc="o.company_id.vat"  /> </span>
                         <address t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' class="text-nowrap" />
                    <div t-if="o.partner_id.vat" >
                        <t t-if="o.company_id.country_id.vat_label" t-esc="o.company_id.country_id.vat_label" id="inv_tax_id_label"/>
                        <t t-else="" class="text-nowrap"> <bdi>  Tax ID / الرقم الضريبى </bdi></t>  : <span t-field="o.partner_id.vat"/></div>

                    </h8>


                    <h6>

                  <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'"> <bdi> Catch Invoice / سند قبض  </bdi></span>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'"> <bdi> Draft Invoice  / مسودة فاتورة </bdi></span>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'"> <bdi> Cancelled Invoice / فاتورة ملغية </bdi></span>
                        <span t-if="o.move_type == 'out_refund'"><bdi> Credit Note /  بيع آجل</bdi></span>
                        <span t-if="o.move_type == 'in_refund'"><bdi> Vendor Credit Note / بيع آجل مورد  </bdi></span>
                        <span t-if="o.move_type == 'in_invoice'"><bdi> Vendor Bill / فاتورة مورد</bdi> </span>
                        <span t-if="o.name != '/'" t-field="o.name"/>
                    </h6>
                    <h7>
                        <div  t-if="o.invoice_date" name="invoice_date">
                            <strong class="text-nowrap"><bdi> Invoice Date / تاريخ الفاتورة</bdi>:</strong>
                            <p  t-field="o.invoice_date"/>
                        </div>
                    </h7>

                    <t t-set="display_discount" t-value="any(l.discount for l in o.invoice_line_ids)"/>

                    <table  name="invoice_line_table">

                        <tbody class="invoice_tbody">
                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                            <t t-foreach="lines" t-as="line">

                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                        <tr>
                               <td name="account_invoice_line_name">
                                         <span class="text-nowrap"><bdi>Description /  الوصف</bdi>:</span>
                               </td>
                                        </tr>
                                        <tr>
                                            <td>
                                      <span class="text-nowrap" t-field="line.name" t-options="{'widget': 'text'}"/>  /
                                          <span class="text-nowrap" t-field="line.product_id.arabic_name" t-options="{'widget': 'text'}"/>
                                  </td>
                                        </tr>
                                        <tr>


                                        <td class="text-left">
<!--                                         <span t-field= "format(int(line.quantity))" />-->
                                         <span  t-esc="'{0:,.0f}'.format(int(line.quantity))"/>

                                        <span t-field="line.product_uom_id"  groups="uom.group_uom"/>


                                        X
                                            <span class="text-nowrap" t-field="line.price_unit"/>

                                        </td>
                                        </tr>

                                        <tr>

                                        <td>
                                         <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" id="line_tax_ids"/>
                                        <span  t-if="display_discount" class="text-nowrap" t-field="line.discount"/>
                                           =  <span class="text-nowrap" t-field="line.price_subtotal"/>
                                        </td>
                                        </tr>
                                    <tr>
                                             <td class="text-left o_price_total">
                                            <span class="text-left"><bdi> Total /  الاجمالى </bdi> :</span>
                                                  </td>


                                         </tr>
                                           <tr>
                                             <td class="text-left o_price_total">
                                                  <span class="text-left text-nowrap" t-field="line.price_total" />
                                                 </td>

                                         </tr>
                                        <tr>
                                            <td>
                                               ----------------------
                                            </td>
                                        </tr>

                                    </t>

                                </tr>

                                <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                    <tr class="is-subtotal text-left">
                                        <td colspan="99">
                                            <strong class="mr16"><bdi> Subtotal / اجمالى السعر </bdi></strong>
                                            <span
                                                t-esc="current_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                            />
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>

                    <div class="clearfix">
                        <div id="total" class="row">
                            <div  >
                                <table class="table" style="page-break-inside: avoid;">
                                    <tr class="border-black o_subtotal" style="">
                                        <td><strong><bdi> Subtotal / الاجمالى</bdi></strong></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_untaxed"/>
                                        </td>
                                    </tr>
                                    <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                        <tr style="">
                                            <t t-if="len(o.line_ids.filtered(lambda line: line.tax_line_id)) in [0, 1] and o.amount_untaxed == amount_by_group[2]">
                                                <td><span class="text-nowrap" t-esc="amount_by_group[0]"/></td>
                                                <td class="text-left o_price_total">
                                                    <span class="text-nowrap" t-esc="amount_by_group[3]" />
                                                </td>
                                            </t>
                                            <t t-else="">
                                                <td>
                                                    <span t-esc="amount_by_group[0]"/>
                                                    <span class="text-nowrap"> on
                                                        <t t-esc="amount_by_group[4]"/>
                                                    </span>
                                                </td>
                                                <td class="text-right o_price_total">
                                                    <span class="text-nowrap" t-esc="amount_by_group[3]"/>
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                    <tr class="border-black o_total">
                                        <td><strong><bdi> Total  / الاجمالى </bdi></strong></td>
                                        <td class="text-left">
                                            <span class="text-nowrap" t-field="o.amount_total"/>
                                        </td>
                                    </tr>
                                    <t t-if="print_with_payments">
                                        <t t-if="o.payment_state != 'invoicing_legacy'">
                                            <t t-set="payments_vals" t-value="o.sudo()._get_reconciled_info_JSON_values()"/>
                                            <t t-foreach="payments_vals" t-as="payment_vals">
                                                <tr>
                                                    <td>
                                                        <i class="oe_form_field text-right oe_payment_label"><bdi> Paid on / دفع </bdi> <t t-esc="payment_vals['date']" t-options='{"widget": "date"}'/></i>
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-esc="payment_vals['amount']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                    </td>
                                                </tr>
                                            </t>
                                            <t t-if="len(payments_vals) > 0">
                                                <tr class="border-black">
                                                    <td><strong class="text-nowrap"><bdi> Amount Due /  باقى المبلغ</bdi></strong></td>
                                                    <td class="text-right">
                                                        <span t-field="o.amount_residual"/>
                                                    </td>
                                                </tr>
                                            </t>
                                        </t>
                                    </t>
                                </table>
                            </div>
                        </div>
                    </div>
                          <div class="text-nowrap"> <b>  Thank You For Deal With Us       </b></div>
                      <div class="text-nowrap"> <b>  شكرا لتعاملك معنا    </b></div>

                       <br/>


                       <div>  </div>
                      <div>   .</div>
                    <p t-if="o.invoice_payment_term_id" name="payment_term">
                        <span t-field="o.invoice_payment_term_id.note"/>
                    </p>
                    <p t-if="o.narration" name="comment">
                        <span t-field="o.narration"/>
                    </p>
                    <p t-if="o.fiscal_position_id.note" name="note">
                        <span t-field="o.fiscal_position_id.note"/>
                    </p>
                    <p t-if="o.invoice_incoterm_id" name="incoterm">
                        <strong>Incoterm: </strong><span t-field="o.invoice_incoterm_id.code"/> - <span t-field="o.invoice_incoterm_id.name"/>
                    </p>
                    <div id="qrcode" t-if="o.display_qr_code">
                        <p t-if="qr_code_urls.get(o.id)">
                            <strong class="text-center"><bdi> Scan me with your banking app. / قم بمسح باركود البنك  </bdi></strong><br/><br/>
                            <img class="border border-dark rounded" t-att-src="qr_code_urls[o.id]"/>
                        </p>
                    </div>
                </div>
            </t>

                </t>
            </t>
            </t>

     </template>
</odoo>
